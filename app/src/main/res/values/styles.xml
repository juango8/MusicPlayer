<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="member_info" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:paddingStart">@dimen/padding_half</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="member_label" parent="AppTheme">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:paddingStart">@dimen/padding_half</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
    </style>

    <dimen name="detail_text_size">20sp</dimen>
    <dimen name="padding_half">8dp</dimen>
</resources>